<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="3.1">
    <servlet>
        <servlet-name>CastleServlet</servlet-name>
        <servlet-class>com.example.CastleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CastleServlet</servlet-name>
        <url-pattern>/castle</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.example.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddAnimalServlet</servlet-name>
        <servlet-class>com.example.AddAnimalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddAnimalServlet</servlet-name>
        <url-pattern>/addAnimal</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>com.example.AuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/addAnimal</url-pattern>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
